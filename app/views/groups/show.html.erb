<%= provide(:title, 'Group') %>

<%if @group.users.empty? %>
  <p> This group is currently empty. Add members from <%= link_to "Here", show_users_path %> </p>

<% else %>

  <p> Members: </p>
  <% @group.users.each do |user| %>
  <li><%= user.name%> <%=link_to "Remove user", {:controller => "groups", :action => "remove_member", :id => @group.id, :user_id => user.id}, :confirm => "Are you sure?", :class => 'btn btn-small btn-danger' %> </li></br> </br>
  
  <% end %>
<% end %> 

<p>  <%= link_to "Add members", show_users_path, :class => 'btn btn-large btn-primary' %> </p>
  