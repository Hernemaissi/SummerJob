<%= provide(:title, "#{@company.name}'s mailbox")%>

<h1> <%= @company.name%>'s Mailbox </h1>
  
<h2> Deliverables </h2>

<div class="show_block"> <i class="icon-chevron-down"></i> Show derivables </div>
<div class="content_block"> <u1>
<li> <%= link_to "Business plan", show_plan_path(:id => @company.id)%> <%= @company.business_plan.getStatus %>  <%= render 'eye_icon'%> </li>
</u1> </div>
<div class="hide_block"><i class="icon-chevron-up"></i> Hide derivables </div>

<h2> Sent RFP:s </h2>
<div class="show_block"> <i class="icon-chevron-down"></i> Show sent RFP:s </div>
<div class="content_block"> <u1>
<% @company.sent_rfps.each do |rfp| %>
 <li> <%= link_to "To #{rfp.receiver.name}", rfp%>  <%= render 'bid_mail', :rfp => rfp %></li>
<% end %>
</u1> </div>
<div class="hide_block"><i class="icon-chevron-up"></i> Hide sent RFP:s </div>

<h2> Received RFP:s </h2>
<div class="show_block"> <i class="icon-chevron-down"></i> Show received RFP:s </div>
<div class="content_block"> <u1>
<% @company.received_rfps.each do |rfp| %>
 <li> <%= link_to "From #{rfp.sender.name}", rfp%> <%= render 'bid_mail', :rfp => rfp %> </li>
<% end %>
</u1> </div>
<div class="hide_block"><i class="icon-chevron-up"></i> Hide received RFP:s </div>