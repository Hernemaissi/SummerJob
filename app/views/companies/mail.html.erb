<%= provide(:title, "#{@company.name}'s mailbox")%>

<h5> <%= @company.name%>'s briefcase </h5>
<h4> Deliverable(s) </h4>
<div class="show_block">
  <p1><i class="icon-chevron-down"></i>Show</p1></div>
    <div class="content_block">
      <p2><i class="icon-envelope"></i> <%= link_to "Business plan", show_plan_path(:id => @company.id)%> <%= @company.business_plan.getStatus %>  <%= render 'eye_icon'%> </p2></br>
     </div>
<div class="hide_block"><p1><i class="icon-chevron-up"></i> Hide </p1></div>

<h4> Sent RFP(s) </h4>
<div class="show_block">
  <p1><i class="icon-chevron-down"></i>Show</p1></div>
    <div class="content_block"> 
 <% if @company.sent_rfps.empty? %> 
   <p2>Currently there are no Sent RFP(s) </p2>
 <% else %>
     <p2><i class="icon-envelope"></i> <% @company.sent_rfps.each do |rfp| %> <%= link_to "To #{rfp.receiver.name}", rfp%>  <%= render 'bid_mail', :rfp => rfp %> </p2></br>
    <% end %>
<% end %>
    </div>
<div class="hide_block"><p1><i class="icon-chevron-up"></i> Hide </p1></div>

<h4> Received RFP(s) </h4>
<div class="show_block">
  <p1><i class="icon-chevron-down"></i>Show </p1></div>
  <div class="content_block"> 
 <% if @company.received_rfps.empty? %> 
   <p2>Currently there are no received RFP(s) </p2>
 <% else %>
    <p2><i class="icon-envelope"></i> <% @company.received_rfps.each do |rfp| %> <%= link_to "From #{rfp.sender.name}", rfp%> <%= render 'bid_mail', :rfp => rfp %> </p2></br>
   <% end %>
  <% end %>
</div>
<div class="hide_block"><p1><i class="icon-chevron-up"></i> Hide </p1> </div>