<%= hidden_field_tag 'marketing_min', @company.get_limit_hash_value("marketing", "min"),  :id => "marketing_min" %>
<%= hidden_field_tag 'marketing_max', @company.get_limit_hash_value("marketing", "max"),  :id => "marketing_max" %>
<%= hidden_field_tag 'marketing_limit', @company.get_limit_hash_value("marketing", "max_size"),  :id => "marketing_limit" %>


<p style="font-size:16px;padding-left:2%;">
      <%= f.label :marketing_cost, "#{t :marketing_investment}", :style=> "font-size:16px;padding-left:5px;padding-right:5px;" %>
       <div class="slider_result" style="color:#000000;"><span id="marketing_result"> <%= number_with_precision @company.role.marketing, :precision => 0, :delimiter => " " %></span> $ </div>
       <div id="marketing_slider"></div>

       <%= f.fields_for :role do |builder| %>

       <%= builder.hidden_field :marketing, :id => "marketing" %>

       <% end %>
 </p><br/>
