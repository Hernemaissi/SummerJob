<%= provide(:title, 'Create a new comapny') %>
<h1><%= t :c_new_header %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@company) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
      
      <%=select("company", "company_type_id", CompanyType.all.collect {|p| [ p.name, p.id ] }, {:include_blank => false})%>
      <%= collection_select(:group, :id, @free_groups, :id, :id, options ={:prompt => "-#{t :c_new_select}"}, :class =>"owner") %>

      <%= f.submit "#{t :c_new_create}", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>