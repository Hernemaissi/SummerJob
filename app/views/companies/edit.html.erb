<% else %> You have not yet decided a service level or product type, so it is free. Further changes will incur a penalty </p> <% end %>

<div class="row">
  <div class="span6 offset3">
    <div class="statistics">
      <div class="alpha60">

  <h2>Company type: <span style="color:white;"><%= @company.service_type %></span></h2>
    <%= form_for(@company) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
      

        <% if @company.is_customer_facing? %>
            <%= render 'customer_facing_form', :f => f %>
      <% end  %>
      <% if @company.is_operator? %>
            <%= render 'operator_form', :f => f %>
      <% end  %>

      <% if @company.is_service?  %>
             <%= render 'service_form', :f => f %>
      <% end  %>

     <%= hidden_field_tag 'var_cost', @stat_hash["variable_limit"],  :id => "var_cost" %>
     <%= hidden_field_tag 'start_cost', @company.fixed_cost.round,  :id => "start_cost" %>

    <p style="font-size:16px;color:white;padding-left:2%;">
      <%= f.label :risk_control_cost, "Investment in Quality", :style=> "font-size:16px;color:white;" %>
    <div class="slider_result"></div>
       <div id="risk_slider"></div>
       <%= f.hidden_field :risk_control_cost, :id => "risk_cost" %>
 </p>

 <p style="font-size:16px;color:white;padding-left:2%;">
      <%= f.label :capacity_cost, "Investment in Launch Capacity", :style=> "font-size:16px;color:white;" %>
       <div class="slider_result"></div>
       <div id="capacity_slider"></div>
       <%= f.hidden_field :capacity_cost, :id => "capacity_cost" %>
 </p>

 <p style="font-size:16px;color:white;padding-left:2%;">
      <%= f.label :variable_cost, "Investment in Customer satisfaction", :style=> "font-size:16px;color:white;" %>
       <div class="slider_result"></div>
       <div id="variable_slider"></div>
       <%= f.hidden_field :variable_cost, :id => "variable_cost" %>
 </p>
</div>
</div>
</div>
</div>
</div>

<div id="content" style="height:100%;width:45%;float:right;">
      <div class="statistics">
      <div class="alpha60">
      <h2 class="clear"> <span style="color:#00CCFF;"><%= @company.service_type %></span> Statistics </h2>
      <div class="clear" id="stats">
        <%= render 'stats', :stat_hash => @stat_hash %>
      </div></div></div></br>


      <div class="clear">
      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>

