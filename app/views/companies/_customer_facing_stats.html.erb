
      <tr class="tableizer-firstrow">
       
       <tr><td style="text-align:left;"><%= t :stat_sell_price %>:</td>
        <%if @company.role.sell_price %>
         <td style="text-align:right;"> <%= number_with_delimiter @company.role.sell_price, :delimiter => " " %></td>
        <%else %>
        <td style="text-align:right;"><%= t :stat_not_decided %></td>
        <%end %>
      </tr>
       
      <% if signed_in? && current_user.isOwner?(@company) %>
      <tr><td style="text-align:left;"><%= t :stat_sales_made %>  </td>
         <td style="text-align:right;"> <%= @company.role.sales_made %></td>
      </tr> <% end %>
