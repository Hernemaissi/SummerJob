<div id="process_container" class="lead" style="font-size:12px;"> 
<div class="accordion" id="accordion2">
  <div class="accordion-group">
    <div class="accordion-heading">
      <%# Claim Alert %>
            <% if !process.resp_user(@company) %>    
               <div class="alert alert-block alert-error fade in">
                 <button data-dismiss="alert" class="close" type="button">Ã—</button>
                 <h4 class="alert-heading">Alert !</h4>
                 <p> Please assign a responsible to this process by claiming it. </p>
               </div>
            <% end %> 
      <%# Collapse link starts %>
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#<%= "process#{process.id}body"  %>">
        <p>  
          <%# Company name %>
          <span style="font-size:18px;color:#99173C;padding-right:6px;"> <%= "#{process.other_party(@company).name}" %> </span> 
          <%# Responsible in from company %>
          <i class="icon-user"></i> <span style="font-size:12px;color:#99173C;padding-right:10px;"> 
          <%= process.resp_user(process.other_party(@company)).name if process.resp_user(process.other_party(@company)) %> </span>      
          <%# Status %> 
          <span style="font-size:16px;color:#555152;padding-right:8px;">
          STATUS: <%= process.status_to_string(process.next_action) %> 
          </span> 
          <%# Next step %> 
          <% if process.next_action_by == @company %> 
            <span style="font-size:14px;color:#FCFEF5;padding:4px;background-color:#EC4A3D;"> Awaiting your input </span>
          <% elsif process.next_action_by %> 
            <span style="font-size:14px;color:#FCFEF5;padding:4px;background-color:#FCBC4F;"> Awaiting their input </span> 
          <% else %> 
            <span style="font-size:14px;color:#FCFEF5;padding:4px;background-color:#2A7CF9;">  </span>
          <% end %>
          <%# Claiming process button and responsible user in your company %>
          <% if process.resp_user(@company)%> 
            <span class="right" style="font-size:14px;color:#000000;padding:2px;">  
              <i class='icon-user'></i> <%= process.resp_user(@company).name %>  
            </span> 
          <%end%>
          <% if !process.resp_user(@company) && @company == process.second_party %> 
              <%= link_to "Claim this process", contract_process_path(process, :receiver => "1"), :class => "btn btn-danger right", :style => "font-size:15px;padding-right:25px;padding-left:25px;" , :method => :put %> 
            </br>
          <% end %>
          <% if !process.resp_user(@company) && @company == process.first_party %>  
             <%= link_to "Claim this process", contract_process_path(process, :receiver => "0"), :class => "btn btn-danger right", :style => "font-size:15px;padding-right:25px;padding-left:25px;" ,:method => :put %>
             </br> 
           <% end %>
        </p>
      </a>
    </div>
    
  <div id="<%= "process#{process.id}body"%>" class="accordion-body collapse">
    <div class="accordion-inner">
    <%# Timeline %>

  
  <% if process.send_bid?(current_user) && process.resp_user?(current_user) %>
  <div class="right"> 
        <%= link_to "Send an offer", make_bid_path(process.other_party(@company)) , :class => "btn btn-danger", :style => "font-size:15px;padding-right:25px;padding-left:25px;" %></div> <br><br><div class="hr_line" style="clear: both;"></div>
        <% end %>

        <% if process.send_rfp?(current_user) && process.resp_user?(current_user) %>  <div class="right"> 
        <%= link_to "Send a RFP", send_rfp_path(process.other_party(@company)) , :class => "btn btn-danger", :style => "font-size:15px;padding-right:25px;padding-left:25px;"%></div><br> <br><div class="hr_line" style="clear: both;"></div>
        <% end %>

        <% if process.show_bid?(current_user) %>  <div class="right"> 
        <%= link_to "Check the offer", bid_path(process.bids.last.id), :class => "btn btn-info", :style => "font-size:15px;padding-right:25px;padding-left:25px;" %></div> <br><br><div class="hr_line" style="clear: both;"></div>
        <% end %>

        <% if process.show_contract?(current_user) %>  <div class="contractbox"> 
        <%= link_to "Check the renegotiation contract", contract_path(process.first_party.get_contract_with(process.second_party).id), :class => "btn btn-info", :style => "font-size:15px;padding-right:25px;padding-left:25px;" %></div>  <br><br><div class="hr_line" style="clear: both;"></div>
        <% end %>


      
     
        <% process.items.reverse.each do |item| %>
        <% if item.kind_of? Rfp %>  
        <%# RFP %>
           
                <%if item.sender == @company %>
                <div class="right offerbox" style="display:block;">
                     <span style="font-size:20px;color:#2D3041;background-color:#EFD0B1;padding: 3px 350px 3px 3px;"> RFP</span><br>
                     <span style="color:#FF8000;font-size:15px;">Message:</span>
                     <%= item.content %> 
                     <br><span class="right" style="color:#B8C1C5;"> <%= item.updated_at.to_formatted_s(:rfc822) %></span>
                </div>   
                <%else %>
                <div class="left offerbox" style="display:block;"> 
                    <span style="font-size:20px;color:#2D3041;background-color:#EFD0B1;padding: 3px 350px 3px 3px;"> RFP</span><br>
                    <span style="color:#FF8000;font-size:15px;">Message:</span>
                    <%= item.content %>
                    <br><span class="right" style="color:#B8C1C5;"> <%= item.updated_at.to_formatted_s(:rfc822) %></span>
                </div> 
                <%end%>
                
            
        <% else %>

         <%# Offer and check for contract %>

            
                <% if item.contract %>
                <div class="right offerbox" style="display:block;">
                <span style="font-size:20px;color:#DAEDEB;background-color:#00B3A1;padding: 3px 350px 3px 3px;"> Contract</span><br>
                <%= link_to "show contract", item.contract  %>
                <span class="right" style="width:80px;height:30px;"> <%= image_tag("void.png") %></span>

                <br><span class="right" style="color:#B8C1C5;"> <%= item.updated_at.to_formatted_s(:rfc822) %></span>
                </div> <div class="hr_line" style="clear: both;"></div>
                <% end %> 
                
                
                <%if item.sender == @company %>
                <div class="right offerbox" style="display:block;">
                <span style="font-size:20px;color:#F2F7F7;background-color:#3B3C34;padding: 3px 350px 3px 3px;"> Offer</span><br>
                  <span style="color:#FF8000;font-size:15px;">Message:</span><%= item.message %><br> 
                  <span style="color:#FF8000;font-size:15px;">Offer:</span><%= item.offer %> 
                  <br> <span style="color:#FF8000;font-size:15px;">Duration:</span> <%= (item.agreed_duration) ? item.agreed_duration : "Whole Game" %>
                  <br><span class="right" style="color:#B8C1C5;"> <%= item.updated_at.to_formatted_s(:rfc822) %></span>
                </div> 
                <%else %>
                <div class="left offerbox" style="display:block;"> 
                <span style="font-size:20px;color:#F2F7F7;background-color:#3B3C34;padding: 3px 350px 3px 3px;"> Offer</span><br>
                  <span style="color:#FF8000;font-size:15px;">Message:</span><%= item.message %><br> 
                  <span style="color:#FF8000;font-size:15px;">Offer:</span><%= item.offer %> 
                  <br> <span style="color:#FF8000;font-size:15px;">Duration:</span> <%= (item.agreed_duration) ? item.agreed_duration : "Whole Game" %>
                  <br><span class="right" style="color:#B8C1C5;"> <%= item.updated_at.to_formatted_s(:rfc822) %></span>
                
                <!--   <br> <div class="hr_line right"></div> --> 
                </div>  
                <%end%>  
               

          <% end %> 
         <br><div class="hr_line" style="clear: both;"></div>
        <% end %>

     
      </div>
    </div>
  </div>
</div>
</div>