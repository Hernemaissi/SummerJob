 <%= f.fields_for :customer_facing_role do |builder| %>
    <p style="font-size:16px;color:white;padding-left:2%;"> Promised Service Level for customers 
      <sup><i class="icon-info-sign icon-white"
                       data-title="instruction"
                       data-content="You will find all your contract information and documents inside !"></i>
      </sup>
    </p>
          <div class="size_buttons" style="padding-left:30px;">
            <%= builder.radio_button :promised_service_level, '1', :checked => true %>
            <%= label :level_1, 'Budget' ,:style=> "font-size:12px;color:white;" %>
          </div>

          <div class="size_buttons">
            <%= builder.radio_button :promised_service_level, '2'%>
            <%= label :level_2, 'Common' ,:style=> "font-size:12px;color:white;"%>
          </div>

          <div class="size_buttons">
            <%= builder.radio_button :promised_service_level, '3'%>
            <%= label :level_3, 'Luxury' ,:style=> "font-size:12px;color:white;"%>
          </div>

      <div class="clear"></div>
      <p style="font-size:16px;color:white;padding-left:2%;">Select the market you wish to target
        <sup><i class="icon-info-sign icon-white"
                       data-title="instruction"
                       data-content="You will find all your contract information and documents inside !"></i>
      </sup>
      </p>
      <div style="padding-left:2%;padding-right:4%;"> 
      <%= builder.collection_select(:market_id, Market.all, :id, :name, options ={:include_blank => false}, :class =>"owner" ) %>
        <%end %></div>
        
       