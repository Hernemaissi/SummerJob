<tr class="tableizer-firstrow lead" style="background-color:#000000;color:#ffffff;">
                <td style="text-align:left;padding-left:6px;"><%= t :market_data %> </td>
                <td style="text-align:right;padding-right:6px;">&nbsp;</td>
              </tr>

              <% market_data.each do |key, value| %>

              <tr><td style="background-color:yellow;text-align:left;"> <%= key %> </td>
          <td style="background-color:yellow;text-align:right;"> &nbsp; </td></tr>
              <% unless value["launches"].nil? || value["launches"] == 0 %>
                <tr><td style="text-align:left;"><%= t :market_data_launches %></td>
          <td style="text-align:right;"><%= value["launches"]  %> </td></tr>
                 <tr><td style="text-align:left;"><%= t :market_data_sat %></td>
          <td style="text-align:right;"> <%= "%.2f" % value["sat"] %> </td></tr>

            <% else %>

                <tr><td style="text-align:left;"><%= t :market_data_launches %></td>
          <td style="text-align:right;"> - </td></tr>
                 <tr><td style="text-align:left;"><%= t :market_data_sat %></td>
          <td style="text-align:right;"> - </td></tr>


                 <% end %>
              <% end %>
