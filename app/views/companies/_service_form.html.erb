 <%= f.fields_for :service_role do |builder| %>
      <p> Service Level </p>
          <div class="size_buttons">
            <%= builder.radio_button :service_level, '1', :checked => true, :class => "level" %>
            <%= label :level_1, 'Budget' %>
          </div>

          <div class="size_buttons">
            <%= builder.radio_button :service_level, '2', :class => "level" %>
            <%= label :level_2, 'Common' %>
          </div>

          <div class="size_buttons">
            <%= builder.radio_button :service_level, '3', :class => "level" %>
            <%= label :level_3, 'Luxury' %>
          </div>
      <div class="clear"></div>
        <%= builder.label :specialized, "Specialized?"  %>
        <%= builder.check_box :specialized,  :class => "specialized" %>
        <%end %>