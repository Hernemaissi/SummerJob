<div id="tickertest" style="position:absolute !important;border-left:solid 2px #F0F0F0;font-size:14px;padding-left:5px;" class="show lead">   
   <form action="">
<% if current_user.show_read_events %>
      <input type="checkbox" style="position:relative;bottom:3px;" name="show_read_events" value="show_read_events" id="show_read_events" checked="checked" />
      Show read events
<% else %>
      <input type="checkbox" style="position:relative;bottom:3px;" name="show_read_events" value="show_read_events" id="show_read_events" />
      Show read events
<% end %>
</form>

  <div id="ticker">   
 
    <ul class="sidebar-nav-ticker lead" style="padding-top:10px !important;">
      <% current_user.readable_events.each do |e| %>
      <%#= link_to company_mail_path do %>
       <li  style="padding-left:5px !important;height:100% !important;"> <%= e.code_to_message %>
         <% unless e.read? %>
         <input type="hidden" name="object_id" value="<%= e.id %>" id="<%= "event#{e.id}"%>">
         <br>
         <button type="button" class="lead mark-read contracthov">
          mark read
         </button>
         <% end %>
         <hr>
       </li>
      <% end %>
    </ul>
  </div>
