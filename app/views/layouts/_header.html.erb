<header class="navbar nav-position nav-tabs">
       <% if signed_in? %>
      <div class="welcome"> Welcome,  <%= link_to current_user do %><i class="icon-user"></i><%= current_user.name %> <% end %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;You are currently in round <%= @game.current_round %>!! </div>   
      <% end %>
  <div class="navbar-inner">
    <div class="container">
      <div class="nav-logo-nbg-position">
        <%= link_to "NBG" , root_path, id: "logo" %>
      </div>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <% if signed_in? && !current_user.isTeacher? %>
          <li><%= link_to "Links", implinks_path %></li><%end %>
          <% if signed_in? && current_user.has_company?%> 
          <li><%= link_to current_user.group.company.name, current_user.group.company%> </li>
          <%end %>
          <% if signed_in? && current_user.isTeacher? %>
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to "Groups", groups_path%></li>
          <li><%= link_to "Networks", networks_path%></li>
          <li><%= link_to "Game", @game %></li>
          <% end %>
          <% if signed_in? %>
            <li><%= link_to "Companies", companies_path%></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>