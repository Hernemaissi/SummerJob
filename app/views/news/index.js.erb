hide_direction = "<%=  escape_javascript(@hide_direction)%>"
show_direction = "<%=  escape_javascript(@show_direction)%>"
$("#news_page").hide("slide", { direction: hide_direction }, 1000, function() {
  $("#news_page").html("<%= escape_javascript(render @news) %>");
 if ($("#news_image").length != 0) {
    $("#news_image").on('load', function(){
      $("#news_page").show("slide", { direction: show_direction }, 1000);
    });
  } else {
    $("#news_page").show("slide", { direction: show_direction }, 1000);
  }
  
});
<% if @news.id != @last.id %>
  $("#next_news").show();
  <% else %>
  $("#next_news").hide();
<% end %>

 <% if @news.id != @first.id %>
  $("#previous_news").show();
  <% else %>
  $("#previous_news").hide();
<% end %>
$("#news_date").html("<%= escape_javascript(render 'news_date') %>")
