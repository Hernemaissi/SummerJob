
<h1><%= @news.headline  %></h1>


<div style="width:40%;float:left;height:300px;">
<% if @news.picture_url && !@news.picture_url.blank? %>
<%= image_tag @news.picture_url, :id => "news_image" %>
<% else %>
    <%= image_tag "News.jpg", :id => "news_image" %>
<% end %>
</div>

<div style="width:58%;float:right;height:300px;overflow:auto; word-wrap: break-word;">
<div><%=  simple_format(@news.content) %></div>
 </div>

<p><div style="padding-top:10px;visibility:hidden;">hello<br/> hello</div>
<div style="width:60%;" class="pull-left"><span style="font-size:28px;"><strong>MARKET NEWS<b/><br/></strong></span>
  <%= simple_format(@news.market_content)%></div></p>


<div style="width:30%;background: rgba(0, 0, 0, 0.5);padding:3px;color:white;" class="pull-right">
<div style="font-size:28px;"><strong>BREAKING NEWS<br/><br/></strong></div>
<p><%= simple_format(@news.risk_content)%></p> </div>


<input type="hidden" name="news_id" value="<%= @news.id %>" id="news_id"/>
