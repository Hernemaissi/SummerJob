
<h1><%= @news.headline  %></h1>

<div style="width:40%;float:left;height:300px;">
<% if @news.picture_url && !@news.picture_url.blank? %>
<%= image_tag @news.picture_url, :id => "news_image" %>
<% else %>
    <%= image_tag "placeholder.jpg", :id => "news_image" %>
<% end %>
</div>

<div style="width:58%;float:right;height:300px;overflow:scroll;">
<div><%=  simple_format(@news.content) %></div>
 </div>

<p><div style="padding-top:10px;visibility:hidden;">hello<br> hello</div>
<div style="font-size:28px ;"><strong>MARKET NEWS<br><br></strong></div>
<%= simple_format(@news.market_content)%></p>

<div style="font-size:28px ;"><strong>IMPORTANT ANNOUNCEMENTS<br><br></strong></div>
<%= simple_format(@news.risk_content)%></p>


<input type="hidden" name="news_id" value="<%= @news.id %>" id="news_id"/>

