        </div>

         <%= f.label :ll_max_price, "The maximum price customers are willing to pay for Luxury Space Hop",:class => "title_label" %>
        <div class="fieldarea">
        <%= f.text_field :ll_max_price, :class => "field_label" %>
        </div>

        <%= f.label :ll_max_customers, "The maximum amount of customers for Luxury Space Hop (Price 0)",:class => "title_label" %>
        <div class="fieldarea">
        <%= f.text_field :ll_max_customers, :class => "field_label" %>
        </div>

         <%= f.label :hb_amount, "Amount of potential customers for Budget Space Cruise (Sweet Spot)",:class => "title_label" %>
        <div class="fieldarea">
