<%= provide(:title, 'Edit Market') %>
<div class="marketcreatebody">
<h1>Edit Market</h1>
   <div class="row">
     <div class="span6 offset3">
      <div class="alpha60">
        <%= form_for(@market) do |f| %>
        <% render 'shared/error_messages', :object => f.object %>


              <%= f.label :name, :class => "title_label" %>
        <div class="fieldarea">
        <%= f.text_field :name,:class => "field_label" %>
        </div>


        <%= f.label :lb_amount, "Amount of potential customers for Budget Space Hop (Sweet Spot)",:class => "title_label" %>
        <div class="fieldarea">
        <%= f.text_field :lb_amount, :class => "field_label" %>
        </div>

        <%= f.label :lb_sweet_price, "The average price customers are expecting for Budget Space Hop  (Sweet Spot)",:class => "title_label" %>
        <div class="fieldarea">
        <%= f.text_field :lb_sweet_price, :class => "field_label" %>
        </div>

         <%= f.label :lb_max_price, "The maximum price customers are willing to pay for Budget Space Hop",:class => "title_label" %>
        <div class="fieldarea">
        <%= f.text_field :lb_max_price, :class => "field_label" %>
        </div>

        <%= f.label :lb_max_customers, " The maximum amount of customers for Budget Space Hop (Price 0)",:class => "title_label" %>
        <div class="fieldarea">
        <%= f.text_field :lb_max_customers, :class => "field_label" %>
        </div>

         <%= f.label :ll_amount, "Amount of potential customers for Luxury Space Hop (Sweet Spot)",:class => "title_label" %>
