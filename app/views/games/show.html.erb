
<h2> Currently on round <%= @game.current_round %> </h2>

<h2> Round's objective: </h2>
<p> <%= @game.get_round_objective %> </p>

<div class="left_button">
    <%= form_for(@game) do |f| %>
      
     <%= hidden_field_tag("round", (@game.current_round+1)) %>
    
      <%= f.submit "Advance to next round", class: "btn btn-success" %>
    <% end %>

</div>
<div class="right_button">

    <%= form_for(@game) do |f| %>
      
     <%= hidden_field_tag("round", (@game.current_round-1)) %>

      <%= f.submit "Go back to earlier round", class: "btn btn-danger" %>
    <% end %>
</div>
