<%= provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
 <div class="span6 offset3">
  <%= form_for(@user) do |f| %>
 <%= render 'shared/error_messages', :object => f.object %>
<%#%>
  <%= f.label :name %>
  <%= f.text_field :name %>

 <%= f.label :email %>
  <%= f.text_field :email %>

 <%= f.label :password %>
 <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Re-type Password" %>
  <%= f.password_field :password_confirmation %>
      
   <%= f.label :department, "Department" %>
  <%= f.text_field :department %>
      
   <%= f.label :student_number, "Student Number" %>
   <%= f.text_field :student_number %>
   <% if false %>
   <% @qualities.each do |q| %>

   <%=  f.collection_select :qualityvalue_ids, q.qualityvalues, :id, :value, {:prompt => q.title}, { :selected => @user.qualityvalues, :multiple => false, :name => "user[qualityvalue_ids][]", :id => q.title} %>
   <% end %>
   <% end %>

 <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
  <% end %>
  </div>
</div>