<% provide(:title, @user.name) %>
  
<div class="lead span10">
   <% if signed_in? && current_user.teacher? && current_user == @user %>
    <%= image_tag("masterprofile.png",:class=>"span2")%>  <div class="clear"></div>
    <br><%= render 'personaldetails'%>
  
  <%else%>
   <br><%= render 'personaldetails'%>
   
  <% end %>

  <% if !current_user.teacher? || current_user.id != @user.id  %>
    <p style="border-radius:10px;padding:3px 2px 3px 3px;font-size:18px;background-color:#0B615E;color:#ffffff;"> Present Status </p>

    <div style="font-size:14px;line-height:15px;">  
        <% if @user.group %>  
          <p> <%= @user.name%> is assigned to Group <%= @user.group.id%></p>
              
           <% if @user.group.company%>
                  <p> <strong> Company: </strong> <%= link_to @user.group.company.name, @user.group.company %> </p>
           <%else %>
                  <p style="color:red"> Unemployed </p>
           <% end %>

          Members are <br/><br/>
          <% @user.group.users.each do |u| %>
          
           <div class="span5">
             <i class="icon-user"></i><%= u.name %><br/>
             <span style="color:#800000;padding-right:6px;">Email:</span><%= u.email %>
           </div>
           <div class="span5">
             <span style="color:#800000;padding-right:5px;">Registered:</span><%= u.registered %><br/>
             <span style="color:#800000;padding-right:5px;">Registered to Group:</span><%= u.group_registered %>
           </div>
           <br/><br/><br/>
          <% end %>   
        <% else %>
           <p style="color:red"> No Company assigned.</p>
        <% end %>
    </div>
  
<!--     <#% if signed_in? %> 
    <p style="color:green">
      <strong> Currently in round <%= @game.current_round %>!</strong>
    </p>
    <#% end %> <br/>   -->
  <% end %>

<div class="left">
  <% if signed_in? && current_user.teacher? && !@user.teacher? %>
    <%= link_to "Set as admin", set_admin_path(@user), :class => "btn btn-danger pull-left" %>
  <% end %>  <br><br>
  <% if signed_in? && current_user.teacher? %>
    <%= link_to "Resend registration mail", resend_registration_path(@user), :class => "btn btn-success pull-left" %>
  <% end %>
</div>
 </div>       
<div id="footer" style="clear:both;text-align:left;">
  <% if signed_in? && !current_user.teacher? %>
  <blockquote><p>"About the time we can make the ends meet, somebody moves the ends."</p>
  <small>Herbert Hoover</small>
  </blockquote><% end %>
</div>


    
    

