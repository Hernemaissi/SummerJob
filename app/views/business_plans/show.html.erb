<%= provide(:title, "#{@company.name}'s Business Plan")%>
<%# Business plan status %>
 <% if !@company.business_plan.waiting? && !@company.business_plan.verified? %>
    <p class="box unfinished"> Company business plan is not ready yet. </p>
    <h3> Status of all the parts in the business plan: </h3>
    <% @company.business_plan.plan_parts.each_with_index do |part,i|%>
         <h4><li>  Status of Part <%= i+1 %>: 
          <% if part.isReady? %> 
                <%= "Completed" %> 
             <%else%> 
                <%= "Pending" %> 
            <% end %>
         </li></h4>
     <% end %>
  <% else %>
    <% if @company.business_plan.verified? %>
    <h1>Business Plan</h1>
    <% else %>
    <p class=" box waiting">Business plan is waiting for verification </p>
    <%if signed_in? && current_user.isTeacher? %>
   <%= link_to "Accept this plan", verify_plan_path(:id => @company.id), :class => "btn btn-success"%>
   <% end %>
   <% end %>
 <% @company.business_plan.plan_parts.each do |part| %>
<% if current_user.isOwner?(@company) || part.outer %>
<h2><%= part.title %> <%if current_user.isOwner?(@company) %> <%= render  'companies/eye_icon', :public => part.outer %><% end %>   </h2>
<p> <%=part.content %> </p>
<% end  %>
<% end %>
<% end %>

  <br/>
  <% if signed_in? && current_user.isOwner?(@company)%>
         <% if @company.business_plan.public?%>
         <em><i class="icon-eye-open"></i>
         The Business plan is currently visible to everyone </em> <br/>
         <%= link_to visibility_path(:id => @company.id), :class => "btn btn-primary" do%>
         <i class="icon-eye-close icon-white"></i> Set as private 
         <% end %>
  <% else %>
  <em><i class="icon-eye-close"></i>
         The Business plan is currently visible only to your group and the teachers </em> <br/>
         <%= link_to visibility_path(:id => @company.id), :class => "btn btn-primary" do%>
         <i class="icon-eye-open icon-white"></i> Set as public
         <% end %>
         <% end %>
  <% end %>