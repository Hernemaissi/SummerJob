<%= provide(:title, "Make a bid")%>

<h2> Make a bid to <%= @receiver.name %> </h2>
<div class="row">
  <div class="span6 offset3">
<div style="text-align:center;">
          <div class="accordion" id="accordion2">
            <div class="accordion-group">
              <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
                  The original RFP message
                </a>
              </div>
              <div id="collapseOne" class="accordion-body collapse" style="height: 0px; ">
                <div class="accordion-inner">
                  <%= @rfp.content %> 
                </div>
              </div>
            </div>
</div></div>

    <%= form_for(@bid) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
      
      <%=f.label :message %>
      <%=f.text_area :message %>
    
     
    <% if @sender == @bid.provider %> 
    <%= f.label :amount, "Cost you request per launch" %>
    <% else %>
    <%= f.label :amount, "Price you are ready to pay per launch" %> 
    <% end %>
      <%= f.text_field :amount %>

    <%= f.label :agreed_duration, "Duration of the contract (leave empty if you want it to continue the whole game)" %>
    <%= f.text_field :agreed_duration %>

    <%= f.label :penalty, "Penalty occured if the contract is broken" %>
    <%= f.text_field :penalty %>

    <% if @sender == @bid.provider %>
    <%= f.label :launches, "The amount of launches you promise to provide" %>
    <% else %>
    <%= f.label :launches, "The amount of launches you request from the other party" %>
    <% end %>
      <%= f.text_field :launches %>

    <span style="font-size:16px;">
    <% if @sender == @bid.provider %> You are able to provide: 
    <%  else %> <%= @receiver.name %> is able to provide:
    <% end %> 
    <%= @bid.provider.max_capacity %> launches.</span> <br/>

     <%= hidden_field_tag("rfp_id", @bid.rfp_id) %>
    <a class="btn btn-success btn-large" id="bid_confirm_button"> Send Bid </a>

    <div class="modal hide fade" id="bid_confirm_modal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <p> Confirm the details of the Bid before sending </p>
  </div>
  <div class="modal-body">


           <div id="bid_confirmation_content">
             Content
        </div>





  <div class="modal-footer">
    <a href="#">
      <div class="createbuttonarea">
                <%= f.submit "Send", class: "btn btn-large btn-primary" %></div>
      </div>
    </a>
  </div>
</div>




     
    <% end %>
    
    <div style="text-align:center;">
          <div class="accordion" id="accordion2">
            <div class="accordion-group">
              <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapsetwo">
                  Your company cost structure
                </a>
              </div>
              <div id="collapsetwo" class="accordion-body collapse" style="height: 0px; ">
                <div class="accordion-inner">
                  <%= render 'companies/company_stats_bid' %> 
                </div>
              </div>
            </div>
</div></div>
    
  </div>
</div>



            
            
            