<body class="bgresult">
<div class="alpha60"><p style="font-size:30px;color:yellow;padding-left:5%;"> The game has ended now. </p>
  <p style="font-size:25px;color:#00CCFF;padding-left:5%;">Check the Final Scores.</p>
  
<div style="font-size:25px;color:#00CCFF;padding-left:5%;">
<ol>
  <% @networks.each do |n| %>
  <li>
  Network <%= n.id %><br/><br/><span style="font-size:20px;color:yellow;">Final Score:&nbsp<%= n.score %></span><br/><br/> 
    <div style="font-size:16px;color:white;">
    <ul> <% n.companies.each do |c| %>
      <li> <%= link_to c.name, c ,:style => "font-size:16px;color:white;" %> </li>
      <% end %></ul></div>
    <br/></li>
    <% end %>
</ol></div>

<div style="padding-left:5%;">
<%= form_for(@game) do |f| %>
    <%= hidden_field_tag("finished", false) %>
    <%= f.submit "Continue Game", class: "btn btn-danger", :confirm => "Are you certain? This will start the game again." %>
    <% end %></div>
</div></div>
</body>