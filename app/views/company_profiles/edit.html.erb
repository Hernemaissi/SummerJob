<br/><br/><br/>
<div class="row">
  <div class="span6 offset3">
  <%= form_tag update_company_profile_path  do %>
  
      
    <%= label_tag :description, "Write a description about yourself" %>
    <%= text_area_tag "description", current_user.description %>

    <%= label_tag :about_us, "Write a description about your company" %>
    <%= text_area_tag "about_us", @company.about_us %>

    <%= label_tag :for_investors, "Why should investors choose your company?" %>
    <%= text_area_tag "for_investors", @company.for_investors %>

      <%= submit_tag "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
 </div>
</div>
