<% if @company %>

   $(".events-tab").html("<%= escape_javascript(render :partial => 'companies/event_tab', :locals => {:company => @company}) %>");
   $(".mark-read").click(function() {
        url = "/companies/event_update/";
        event_id = $(this).prevAll('input').val();
        key_str = "event_id=" + event_id
        console.log(event_id);
        $.ajax({
            url: url,
            type:"post",
            data: key_str,
            beforeSend: function(xhr, settings) {
                xhr.setRequestHeader('accept', '*/*;q=0.5, ' + settings.accepts.script);
            },
            success: function() {
            }
        });
        $(this).parent('div').removeClass('unread');
        $(this).next('i').remove();
        $(this).unbind();
        $(this).remove();
    });

<% end %>
