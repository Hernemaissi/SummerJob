<% @relations.each do |r| %>

var id1 = <%= r[0] %>;
var id2 = <%= r[1] %>;

var div1 = document.getElementById("line" + id1);
var div2 = document.getElementById("line" + id2);

function getRandomColor() {
        var letters = '0123456789ABCDEF'.split('');
        var color = '#';
        for (var i = 0; i < 6; i++ ) {
            color += letters[Math.round(Math.random() * 15)];
        }
        return color;
    }

connect(div1, div2, "#000000", 5);

<% end %>




