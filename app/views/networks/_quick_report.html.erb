<%= provide(:title, "Quick Look") %>

<table class="tableizer-table">
  <tr><td style="background-color:#00CCFF;height:0.5cm;"> <%= "Network #{report.network.id}" %></td></tr>
  <tr><td>&nbsp;</td></tr>
  <tr><td style="background-color:yellow;height:0.5cm;"> <%= "#{report.network.operator.service_level_to_s} #{report.network.operator.product_type_to_s}" %></td></tr>
  <tr><td>&nbsp;</td></tr>
  <tr><td style="background-color:yellow;height:0.5cm;"> <%= "#{report.network.customer_facing.role.sell_price}" %></td></tr>
  <tr><td>&nbsp;</td></tr>
  <tr><td style="background-color:yellow;height:0.5cm;"> <%= report.sales %></td></tr>
  <tr><td>&nbsp;</td></tr>
  <tr><td style="background-color:yellow;height:0.5cm;"><%= number_with_precision  report.customer_revenue, :precision => 0, :delimiter => " " %></td></tr>
  <tr><td>&nbsp;</td></tr>
  <tr><td style="background-color:yellow;height:0.5cm;"><%= number_with_precision   report.net_cost, :precision => 0, :delimiter => " " %></td></tr>
  <tr><td>&nbsp;</td></tr>
  <tr><td style="background-color:yellow;height:0.5cm;"><%= number_with_precision   (report.customer_revenue - report.net_cost), :precision => 0, :delimiter => " " %></td></tr>
  <tr><td>&nbsp;</td></tr>
  <tr><td style="background-color:yellow;height:0.5cm;"><%= report.satisfaction %></td></tr>
  <tr><td>&nbsp;</td></tr>
  <tr><td style="background-color:yellow;height:0.5cm;"><%= report.max_launch %></td></tr>
  <tr><td>&nbsp;</td></tr>
  <tr><td style="background-color:yellow;height:0.5cm;"><%= report.performed_launch %></td></tr>
</table>
