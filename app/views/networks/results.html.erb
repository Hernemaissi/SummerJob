                  </div>
            </div>
        </div>

       <h2>Network Rankings</h2>
    <div id="content" style="height:100%;width:46%;float:right;padding-right:0.6cm;">     
      <% @networks.each_with_index do |n, i| %>
      <%= "#{i+1}. Network #{n.id}: #{n.score}" %> <br/>
      <% end %>

      <% if @network.customer_facing.role.market %>
      <h2>Market Share for <%=  @network.customer_facing.role.market.name %></h2>
      <% @network.customer_facing.role.market.networks.each do |n| %>
      <%=  "Network #{n.id}: #{n.calculate_market_share} %" %> <br/>
      <% end %>
      <% end %>

    </div>

