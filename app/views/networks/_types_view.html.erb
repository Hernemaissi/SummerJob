
<div class="span2 lead" style="line-height:20px;">
<p><%= title %> </p>
<br/><br/>
	<% companies.each do |c| %>
        <% if @my_company && c == @my_company  %> YOU
          <% end %>
          <div style="width:100px;height:100px;">
            <% unless c.image_url.nil?  %>
                 <%= image_tag c.image_url, :style => "width:80px; height:80px;" %>
                <% else %>
                  <%= image_tag("200x200.png", :style => "width:80px; height:80px;") %>
                <% end %>
                <% if c.ready? %> <i class="icon-ok bluesign"></i> <% else %> <i class="icon-remove bluesign"></i> <% end %>
</div>	
		
			<%= link_to c do %>
		   
            <div id= "line<%= c.id %>" style="padding:5px;background-color:#000000;word-wrap:break-word;width:80px;font-size:12px;color:#ffffff;">  <%= c.name %> </div>
		 
			<br/><br/>

		  	<%end%>

	<% end %>
	</div>
