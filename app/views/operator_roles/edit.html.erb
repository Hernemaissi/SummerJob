<div class="row">
  <div class="span6 offset3">
  <%= form_for(@operator_company_role) do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>

    <p> Service Level </p>
      <div class="size_buttons" style="padding-left:30px;">
            <%= f.radio_button :service_level, '1', :checked => true, :class => "level" %>
            <%= label :level_1, 'Budget',:style=> "font-size:12px;color:black;" %>
          </div>

          <div class="size_buttons">
            <%= f.radio_button :service_level, '2', :class => "level"%>
            <%= label :level_2, 'Common',:style=> "font-size:12px;color:black;" %>
          </div>

          <div class="size_buttons">
            <%= f.radio_button :service_level, '3', :class => "level"%>
            <%= label :level_3, 'Luxury' ,:style=> "font-size:12px;color:black;"%>
          </div>
      <div class="clear"></div>

    

      <p> Product type </p>
      <div class="size_buttons" style="padding-left:30px;">
            <%= f.radio_button :product_type, '1', :checked => true, :class => "type" %>
            <%= label :product_type_1, 'Short Flight',:style=> "font-size:12px;color:black;"  %>
          </div>

          <div class="size_buttons">
            <%= f.radio_button :product_type, '2', :class => "type" %>
            <%= label :product_type_2, 'Medium Flight',:style=> "font-size:12px;color:black;"  %>
          </div>

          <div class="size_buttons">
            <%= f.radio_button :product_type, '3', :class => "type" %>
            <%= label :product_type_3, 'Long Flight',:style=> "font-size:12px;color:black;"  %>
          </div>
      <div class="clear"></div>


      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
 </div>
</div>